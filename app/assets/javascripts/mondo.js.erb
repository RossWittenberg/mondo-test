var MONDO = {
	addListeners: function(){
		
		$('button.navbar-trigger').click(function(event) {
			var navMenuCollapse = $('#nav-menu-collapse');
			$(navMenuCollapse).toggle(400).toggleClass('collapse');
			$(this).toggleClass('active');
		});

		$('.screens__image--wrapper').click(function(event) {
			$('.screens__image--wrapper').removeClass('large').addClass('small');
			$(this).addClass('large');
		});

		$('.screens__image--wrapper').hover(function() {
			$('.screens__image--wrapper').removeClass('large').addClass('small');
			$(this).addClass('large');
		}, function() {
			$(this).removeClass('large').addClass('small');
		});

	}
}

$(function () {
	MONDO.addListeners();
	$('.opinions__bg-image--wrapper').backstretch("<%= asset_url('opinions-bg.png') %>");
  $('.opinions').slick({
  	autoPlay: true,
  	autoPlaySpeed: 1000,
  	arrows: false,
  	accessibility: true,
  	dots: true,
  	dotsClass: "opinion__dots",
  	appendDots: $('#dotsWrrapper'),
  	mobileFirst: true
  });
});