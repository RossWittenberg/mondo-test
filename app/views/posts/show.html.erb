<div class="container margin__top--40">
	
	<p class="blue">
	  Title:
	</p>
	 
	<h4 class="white">
		<%= @post.title %>
	</h4>
	<hr class="cms">
	<br>

	<p class="blue">
	  User:
	</p>
	 
	<h4 class="white">
  	<%= @post.user.username %>
	</h4>
	<hr class="cms">
	<br>

	<p class="blue">
	  Content:
	</p>
	 
	<h4 class="white">
	  <%= @post.content %>
	</h4>
	<hr class="cms">
	<br>

	<%= link_to 'Edit', edit_post_path(@post) %>
	<br>
	<%= link_to 'Back', posts_path %>
</div>	
