<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <title>MondoLabsTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="collapse navbar-collapse" id="nav-menu-collapse">
   	<ul class="nav navbar-nav">
			<div class="container">
				<li class="nav"><%= link_to('Home', root_path, class: "nav") %></li>
				<% if admin_signed_in? %>
					<li class="nav"><%= link_to('Sign Out', destroy_admin_session_path, method: :delete, class: "nav") %></li>
				<% else %>
					<li class="nav"><%= link_to('Sign In', new_admin_session_path, class: "nav") %></li>
					<li class="nav"><%= link_to('Sign Up', new_admin_registration_path, class: "nav") %></li>
				<% end %>
				<li class="nav">
					<a class="nav" href="/mondo/backend">CMS</a>
				</li>
			</div>	
    </ul>
  </div>
	<div class="container">
		<nav class="navbar navbar-default">
	    <div class="navbar-header">
	      <button type="button" class="navbar-trigger">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar first"></span>
	        <span class="icon-bar second"></span>
	        <span class="icon-bar third"></span>
	      </button>
	      <a class="navbar-brand" href="/">
	      	<%= image_tag("selus-logo.png", alt: "Selus Logo", class: "nav-logo")%><span class="logo-text">Selus</span>
	      </a>
	    </div>
		</nav>
	</div>	

	<p class="notice">
		<%= notice %>
	</p>
	<p class="alert">
		<%= alert %>
	</p>

<%= yield %>

</body>
</html>


